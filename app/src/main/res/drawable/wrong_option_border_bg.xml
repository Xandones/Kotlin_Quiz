<?xml version="1.0" encoding="utf-8"?>
<!-- This Shape is used to highlight a wrong marked option, it is a rectangle -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- The following Solid tag is used to define a color to the Shape, in this case a type of red -->
    <solid android:color="@android:color/holo_red_light" />

    <!-- The tag Corners defines the shape of the corners with a round shape -->
    <corners android:radius="5dp" />

    <!-- Closing tag of Shape -->
</shape>