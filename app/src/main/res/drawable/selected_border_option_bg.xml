<?xml version="1.0" encoding="utf-8"?>
<!-- Shape tag that will surround the selected option -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Stroke tag used to set up the border of the shape -->
    <stroke
        android:width="1dp"
        android:color="@color/title" />

    <!-- Solid tag is used to define the main color of the shape -->
    <solid android:color="#33aaff" />

    <!-- Corners tag shape the corners of the Shape round -->
    <corners android:radius="5dp" />

    <!-- Closing tag of Shape -->
</shape>